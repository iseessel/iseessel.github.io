class Board

  def initialize
    @grid = Array.new(3) { Array.new(3) }
  end

  def []=(key, value)
    @grid[key[0]][key[1]] = value
  end

  def [](key)
    @grid[key[0]][key[1]]
  end

  def place(pos, value)
    self[tile] = value
  end

  def won?
    diagonal_won? || horizontal_won? || vertical_won?
  end

  def diagonal_won?
